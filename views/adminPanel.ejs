<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>驻  - 注专转  转专</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-hospital"></i>
                    </div>
                    <span>注专转  转专</span>
                </a>
                <nav class="nav">
                    <span class="nav-link" style="color: var(--primary-color); font-weight: 600;">
                        <i class="fas fa-crown"></i>
                         注专转
                    </span>
                    <a href="/overview" class="nav-link">
                        <i class="fas fa-tv"></i>
                        转爪
                    </a>
                    <a href="/room" class="nav-link">
                        <i class="fas fa-door-open"></i>
                        专
                    </a>
                    <a href="/logout" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        转转拽
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="container">
            <!-- Page Header -->
            <div class="card fade-in-up">
                <div class="text-center">
                    <h1 style="font-size: 2.5rem; font-weight: 700; color: var(--primary-color); margin-bottom: var(--spacing-sm);">
                        <i class="fas fa-cog"></i>
                        驻 
                    </h1>
                    <p style="color: var(--text-secondary); font-size: 1.1rem;">
                         砖转砖, 专 砖转 注专转
                    </p>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="stats-grid mt-3">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= users.length %></h3>
                        <p>砖转砖</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= rooms.length %></h3>
                        <p>专</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= news.length %></h3>
                        <p>砖转</p>
                    </div>
                </div>
            </div>

            <!-- Users Management -->
            <div class="card mt-3 fade-in-up">
                <div class="section-header">
                    <h2 style="color: var(--primary-color); margin-bottom: var(--spacing-lg);">
                        <i class="fas fa-users"></i>
                         砖转砖
                    </h2>
                    <button onclick="showAddUserModal()" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i>
                        住祝 砖转砖
                    </button>
                </div>

                <div class="table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>砖 砖转砖</th>
                                <th>专</th>
                                <th>转驻拽</th>
                                <th>驻注转</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <span><%= user.username %></span>
                                    </div>
                                </td>
                                <td>
                                    <% if (user.room) { %>
                                        <span class="room-badge"><%= user.room %></span>
                                    <% } else { %>
                                        <span class="no-room"> 专</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.isAdmin) { %>
                                        <span class="role-badge admin"></span>
                                    <% } else { %>
                                        <span class="role-badge user">砖转砖</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/editUser/<%= user.id %>" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                            注专
                                        </a>
                                        <% if (!user.isAdmin) { %>
                                        <button onclick="deleteUser('<%= user.id %>', '<%= user.username %>')" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                            拽
                                        </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Rooms Management -->
            <div class="card mt-3 fade-in-up">
                <div class="section-header">
                    <h2 style="color: var(--primary-color); margin-bottom: var(--spacing-lg);">
                        <i class="fas fa-door-open"></i>
                         专
                    </h2>
                    <button onclick="showAddRoomModal()" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        住祝 专
                    </button>
                </div>

                <div class="rooms-grid">
                    <% rooms.forEach(function(room) { %>
                    <div class="room-item">
                        <div class="room-header">
                            <h3><%= room.name %></h3>
                            <div class="room-actions">
                                <button onclick="deleteRoom('<%= room.id %>', '<%= room.name %>')" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <!-- News Management -->
            <div class="card mt-3 fade-in-up">
                <div class="section-header">
                    <h2 style="color: var(--primary-color); margin-bottom: var(--spacing-lg);">
                        <i class="fas fa-newspaper"></i>
                         砖转
                    </h2>
                    <button onclick="showAddNewsModal()" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        住祝 砖转
                    </button>
                </div>

                <div class="news-grid">
                    <% news.forEach(function(item) { %>
                    <div class="news-item">
                        <div class="news-content">
                            <h4><%= item.title %></h4>
                            <p><%= item.content %></p>
                        </div>
                        <div class="news-actions">
                            <a href="/admin/editNews/<%= item.id %>" class="btn btn-secondary btn-sm">
                                <i class="fas fa-edit"></i>
                                注专
                            </a>
                            <button onclick="deleteNews('<%= item.id %>')" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                                拽
                            </button>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>

    <!-- Add User Modal -->
    <div id="addUserModal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>住祝 砖转砖 砖</h3>
                <button onclick="closeAddUserModal()" class="modal-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form action="/admin/addUser" method="POST" class="modal-body">
                <div class="form-group">
                    <label for="username" class="form-label">砖 砖转砖:</label>
                    <input type="text" id="username" name="username" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">住住:</label>
                    <input type="password" id="password" name="password" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="room" class="form-label">专:</label>
                    <select id="room" name="room" class="form-input">
                        <option value="">专 专</option>
                        <% rooms.forEach(function(room) { %>
                            <option value="<%= room.name %>"><%= room.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <input type="checkbox" name="isAdmin" value="true">
                         注专转
                    </label>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        砖专
                    </button>
                    <button type="button" onclick="closeAddUserModal()" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Room Modal -->
    <div id="addRoomModal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>住祝 专 砖</h3>
                <button onclick="closeAddRoomModal()" class="modal-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form action="/admin/addRoom" method="POST" class="modal-body">
                <div class="form-group">
                    <label for="roomName" class="form-label">砖 专:</label>
                    <input type="text" id="roomName" name="roomName" class="form-input" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        砖专
                    </button>
                    <button type="button" onclick="closeAddRoomModal()" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add News Modal -->
    <div id="addNewsModal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3>住祝 砖转 砖转</h3>
                <button onclick="closeAddNewsModal()" class="modal-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form action="/admin/addNews" method="POST" class="modal-body">
                <div class="form-group">
                    <label for="title" class="form-label">转专转:</label>
                    <input type="text" id="title" name="title" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="content" class="form-label">转:</label>
                    <textarea id="content" name="content" class="form-input" rows="4" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        砖专
                    </button>
                    <button type="button" onclick="closeAddNewsModal()" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Notification Container -->
    <div id="notification-container"></div>

    <script>
        // Show notification
        function showNotification(message, type = 'info') {
            const container = document.getElementById('notification-container');
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.textContent = message;
            
            container.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 100);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => container.removeChild(notification), 300);
            }, 5000);
        }

        // Modal functions
        function showAddUserModal() {
            document.getElementById('addUserModal').classList.remove('hidden');
        }

        function closeAddUserModal() {
            document.getElementById('addUserModal').classList.add('hidden');
        }

        function showAddRoomModal() {
            document.getElementById('addRoomModal').classList.remove('hidden');
        }

        function closeAddRoomModal() {
            document.getElementById('addRoomModal').classList.add('hidden');
        }

        function showAddNewsModal() {
            document.getElementById('addNewsModal').classList.remove('hidden');
        }

        function closeAddNewsModal() {
            document.getElementById('addNewsModal').classList.add('hidden');
        }

        // Delete functions
        function deleteUser(userId, username) {
            if (confirm(` 转  砖专爪 拽 转 砖转砖 "${username}"?`)) {
                fetch(`/admin/deleteUser/${userId}`, {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('砖转砖 拽 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 拽转 砖转砖', 'error');
                });
            }
        }

        function deleteRoom(roomId, roomName) {
            if (confirm(` 转  砖专爪 拽 转 专 "${roomName}"?`)) {
                fetch(`/admin/deleteRoom/${roomId}`, {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('专 拽 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 拽转 专', 'error');
                });
            }
        }

        function deleteNews(newsId) {
            if (confirm(' 转  砖专爪 拽 转 砖转?')) {
                fetch(`/admin/deleteNews/${newsId}`, {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('砖转 拽 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 拽转 砖转', 'error');
                });
            }
        }

        // Close modals when clicking outside
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.add('hidden');
                }
            });
        });
    </script>

    <style>
