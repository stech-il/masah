<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>驻 专 - <%= user.room %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-hospital"></i>
                    </div>
                    <span>注专转  转专</span>
                </a>
                <nav class="nav">
                    <span class="nav-link" style="color: var(--primary-color); font-weight: 600;">
                        <i class="fas fa-door-open"></i>
                        <%= user.room %>
                    </span>
                    <a href="/admin" class="nav-link">
                        <i class="fas fa-cog"></i>
                        
                    </a>
                    <a href="/overview" class="nav-link">
                        <i class="fas fa-tv"></i>
                        转爪
                    </a>
                    <a href="/logout" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        转转拽
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="container">
            <!-- Page Header -->
            <div class="card fade-in-up">
                <div class="text-center">
                    <h1 style="font-size: 2.5rem; font-weight: 700; color: var(--primary-color); margin-bottom: var(--spacing-sm);">
                        <i class="fas fa-door-open"></i>
                        <%= user.room %>
                    </h1>
                    <p style="color: var(--text-secondary); font-size: 1.1rem;">
                         驻 驻 转专
                    </p>
                </div>
            </div>

            <!-- Current Patient Section -->
            <div class="card mt-3 fade-in-up">
                <h2 style="color: var(--primary-color); margin-bottom: var(--spacing-lg);">
                    <i class="fas fa-user-check"></i>
                    驻 
                </h2>
                
                <% if (currentPatient) { %>
                    <div class="current-patient-display">
                        <div class="patient-card current-patient">
                            <div class="patient-info">
                                <div class="patient-number-large">
                                    <%= currentPatient.patientNumber %>
                                </div>
                                <div class="patient-details">
                                    <p><strong>住驻专 驻:</strong> <%= currentPatient.phoneNumber %></p>
                                    <p><strong>住住:</strong> 
                                        <span class="status-badge status-active">驻</span>
                                    </p>
                                </div>
                            </div>
                            <div class="patient-actions">
                                <button onclick="repeatCall('<%= currentPatient.patientNumber %>')" class="btn btn-info">
                                    <i class="fas fa-volume-up"></i>
                                    拽专 专转
                                </button>
                                <button onclick="completeTreatment()" class="btn btn-success">
                                    <i class="fas fa-check"></i>
                                    住 驻
                                </button>
                                <button onclick="returnToQueue('<%= currentPatient.id %>')" class="btn btn-warning">
                                    <i class="fas fa-undo"></i>
                                    专 转专
                                </button>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="no-patient-message">
                        <i class="fas fa-info-circle" style="font-size: 3rem; color: var(--text-secondary);"></i>
                        <h3 style="color: var(--text-secondary); margin: var(--spacing-md) 0;"> 驻 驻 专注</h3>
                        <p style="color: var(--text-secondary);">专 驻 专砖   转 驻</p>
                    </div>
                <% } %>
            </div>

            <!-- Waiting List Section -->
            <div class="card mt-3 fade-in-up">
                <div class="waiting-list-header">
                    <h2 style="color: var(--primary-color); margin-bottom: var(--spacing-lg);">
                        <i class="fas fa-clock"></i>
                        专砖转 转 (<%= waitingList.length %> 驻)
                    </h2>
                    <div class="list-controls">
                        <button onclick="refreshList()" class="btn btn-secondary">
                            <i class="fas fa-sync-alt"></i>
                            专注
                        </button>
                    </div>
                </div>

                <% if (waitingList.length > 0) { %>
                    <div class="waiting-list">
                        <% waitingList.forEach(function(patient, index) { %>
                            <div class="patient-item waiting-patient" data-id="<%= patient.id %>">
                                <div class="patient-info">
                                    <div class="patient-number">
                                        <%= patient.patientNumber %>
                                    </div>
                                    <div class="patient-details">
                                        <p><strong>驻:</strong> <%= patient.phoneNumber %></p>
                                        <div class="patient-status">
                                            <% if (patient.isPrioritized) { %>
                                                <span class="status-badge status-priority">
                                                    <i class="fas fa-star"></i>
                                                    注祝
                                                </span>
                                            <% } %>
                                            <% if (patient.isPromotedToTop) { %>
                                                <span class="status-badge status-top">
                                                    <i class="fas fa-arrow-up"></i>
                                                    专砖 转专
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="patient-actions">
                                    <button onclick="promotePatient('<%= patient.id %>')" class="btn btn-primary">
                                        <i class="fas fa-user-check"></i>
                                        拽 驻
                                    </button>
                                    <button onclick="prioritizePatient('<%= patient.id %>')" class="btn btn-warning">
                                        <i class="fas fa-star"></i>
                                        注祝
                                    </button>
                                    <button onclick="movePatient('<%= patient.id %>')" class="btn btn-secondary">
                                        <i class="fas fa-exchange-alt"></i>
                                        注专 专
                                    </button>
                                    <button onclick="deletePatient('<%= patient.id %>')" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                        拽
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-list-message">
                        <i class="fas fa-inbox" style="font-size: 3rem; color: var(--text-secondary);"></i>
                        <h3 style="color: var(--text-secondary); margin: var(--spacing-md) 0;">专砖转 转 专拽</h3>
                        <p style="color: var(--text-secondary);"> 驻 转 专注</p>
                    </div>
                <% } %>
            </div>

            <!-- Move Patient Modal -->
            <div id="moveModal" class="modal hidden">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>注专 驻 专 专</h3>
                        <button onclick="closeMoveModal()" class="modal-close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="newRoom" class="form-label">专 专 砖:</label>
                            <select id="newRoom" class="form-input">
                                <% rooms.forEach(function(room) { %>
                                    <% if (room.name !== user.room) { %>
                                        <option value="<%= room.name %>"><%= room.name %></option>
                                    <% } %>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button onclick="confirmMovePatient()" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            注专
                        </button>
                        <button onclick="closeMoveModal()" class="btn btn-secondary">
                            <i class="fas fa-times"></i>
                            
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Notification Container -->
    <div id="notification-container"></div>

    <script>
        let currentPatientId = null;

        // Show notification
        function showNotification(message, type = 'info') {
            const container = document.getElementById('notification-container');
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.textContent = message;
            
            container.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 100);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => container.removeChild(notification), 300);
            }, 5000);
        }

        // Repeat call function
        function repeatCall(patientNumber) {
            console.log(` Repeat call for patient: ${patientNumber}`);
            
            // Get room name
            const roomName = document.querySelector('.nav-link').textContent.trim();
            
            // Emit Socket.IO event to server
            if (typeof io !== 'undefined') {
                io.emit('repeatCall', {
                    roomName: roomName,
                    patientNumber: patientNumber
                });
                showNotification('拽专 砖 爪', 'success');
            } else {
                console.error('Socket.IO not available');
                showNotification('转拽 砖转 拽专', 'error');
            }
        }



        // Promote patient
        function promotePatient(patientId) {
            fetch(`/room/promote/${patientId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('驻 转拽 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showNotification(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('转拽 拽转 驻', 'error');
            });
        }

        // Complete treatment
        function completeTreatment() {
            if (confirm(' 转  砖专爪 住 转 驻?')) {
                fetch('/room/complete', {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('驻 砖 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 住 驻', 'error');
                });
            }
        }

        // Return to queue
        function returnToQueue(patientId) {
            if (confirm(' 转  砖专爪 专 转 驻 转专?')) {
                fetch(`/room/returnToQueue/${patientId}`, {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('驻 专 转专', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 专转 驻 转专', 'error');
                });
            }
        }

        // Prioritize patient
        function prioritizePatient(patientId) {
            fetch(`/room/prioritize/${patientId}`, {
                method: 'POST'
            })
            .then(() => {
                showNotification('驻 住 注祝', 'success');
                setTimeout(() => window.location.reload(), 1000);
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('转拽 住 驻 注祝', 'error');
            });
        }

        // Move patient modal
        function movePatient(patientId) {
            currentPatientId = patientId;
            document.getElementById('moveModal').classList.remove('hidden');
        }

        function closeMoveModal() {
            document.getElementById('moveModal').classList.add('hidden');
            currentPatientId = null;
        }

        function confirmMovePatient() {
            const newRoom = document.getElementById('newRoom').value;
            
            fetch(`/room/move/${currentPatientId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ newRoom })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('驻 注专 爪', 'success');
                    closeMoveModal();
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showNotification('转拽 注专转 驻', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('转拽 注专转 驻', 'error');
            });
        }

        // Delete patient
        function deletePatient(patientId) {
            if (confirm(' 转  砖专爪 拽 转 驻?')) {
                fetch(`/room/delete/${patientId}`, {
                    method: 'POST'
                })
                .then(() => {
                    showNotification('驻 拽 爪', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('转拽 拽转 驻', 'error');
                });
            }
        }

        // Refresh list
        function refreshList() {
            window.location.reload();
        }

        // Auto-refresh every 30 seconds
        setInterval(refreshList, 30000);

        // Close modal when clicking outside
        document.getElementById('moveModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeMoveModal();
            }
        });
    </script>

    <style>
        /* Additional styles for room panel */
        .current-patient-display {
            text-align: center;
        }

        .patient-card {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.05));
            border: 2px solid var(--success-color);
            border-radius: var(--radius-lg);
            padding: var(--spacing-xl);
            margin: var(--spacing-lg) 0;
        }

        .patient-number-large {
            font-size: 4rem;
            font-weight: 700;
            color: var(--success-color);
            margin-bottom: var(--spacing-md);
        }

        .patient-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--spacing-lg);
        }

        .patient-details p {
            margin: var(--spacing-xs) 0;
            color: var(--text-secondary);
        }

        .waiting-list-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--spacing-lg);
        }

        .waiting-patient {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: var(--spacing-lg);
            margin: var(--spacing-md) 0;
            transition: all var(--transition-normal);
        }

        .waiting-patient:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .patient-actions {
            display: flex;
            gap: var(--spacing-sm);
            flex-wrap: wrap;
        }

        .status-badge.status-priority {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning-color);
        }

        .status-badge.status-top {
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary-color);
        }

        .no-patient-message,
        .empty-list-message {
            text-align: center;
            padding: var(--spacing-2xl);
            color: var(--text-secondary);
        }

        /* Modal styles */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal-content {
            background: var(--bg-primary);
            border-radius: var(--radius-xl);
            padding: var(--spacing-xl);
            max-width: 500px;
            width: 90%;
            box-shadow: var(--shadow-xl);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--spacing-lg);
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-secondary);
            padding: var(--spacing-xs);
        }

        .modal-footer {
            display: flex;
            gap: var(--spacing-md);
            justify-content: flex-end;
            margin-top: var(--spacing-lg);
        }

        .hidden {
            display: none !important;
        }

        /* Large announcement styles */


        /* Responsive design */
        @media (max-width: 768px) {
            .patient-info {
                flex-direction: column;
                align-items: flex-start;
                gap: var(--spacing-md);
            }

            .patient-actions {
                flex-direction: column;
            }

            .waiting-list-header {
                flex-direction: column;
                gap: var(--spacing-md);
            }

            .modal-content {
                width: 95%;
                margin: var(--spacing-md);
            }
        }
    </style>
    
    <!-- Socket.IO Script -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Initialize Socket.IO connection
        const socket = io();
        
        // Handle connection
        socket.on('connect', () => {
            console.log(' Connected to server');
        });
        
        // Handle disconnection
        socket.on('disconnect', () => {
            console.log(' Disconnected from server');
        });
    </script>
</body>
</html>
